<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="405dp"
        android:layout_height="213dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063">

        <RadioButton
            android:id="@+id/questao1_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A - São Paulo" />

        <RadioButton
            android:id="@+id/questao1_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B - Brasília" />

        <RadioButton
            android:id="@+id/questao1_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C - Rio de Janeiro" />

        <RadioButton
            android:id="@+id/questao1_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D - Belo Horizonte" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="406dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545">

        <RadioButton
            android:id="@+id/questao2_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A - 10" />

        <RadioButton
            android:id="@+id/questao2_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B - 20" />

        <RadioButton
            android:id="@+id/questao2_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C - 25" />

        <RadioButton
            android:id="@+id/questao2_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D - 15" />
    </RadioGroup>

    <Button
        android:id="@+id/btnFinalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.778" />
</androidx.constraintlayout.widget.ConstraintLayout>
